<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="TourPlanner - UI" Height="600" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2"/>
        <Grid Grid.Row="0">
            <Label Margin="5" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center">Tour-Planner</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10" VerticalAlignment="Center" Height="30">File</Button>
            <Button Grid.Column="1" Margin="10" VerticalAlignment="Center" Height="30">Edit</Button>
            <Label Grid.Column="2" Margin="10"  VerticalAlignment="Center" Height="30">Place for other options!!!</Label>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="10" VerticalAlignment="Center" Height="30" Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Grid.Column="1" Margin="10" VerticalAlignment="Center" Height="30" Command="{Binding ExecuteSearch}">Search!</Button>
            <Label Grid.Column="2" Margin="10" VerticalAlignment="Center" Height="30" Content="{Binding Output}"></Label>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" />
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" />
            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Center" Background="LightGray" BorderBrush="Black" BorderThickness="1" Height="30">Tours</Label>
                    <Button Grid.Column="1" Margin="5" VerticalAlignment="Center" Height="30">+</Button>
                    <Button Grid.Column="2" Margin="5" VerticalAlignment="Center" Height="30">-</Button>
                    <Button Grid.Column="3" Margin="5" VerticalAlignment="Center" Height="30">[]</Button>
                </Grid>
                <Grid Grid.Row="1">
                    <Label>Tours will be shown here</Label>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Label>Content will be here</Label>
            </Grid>
        </Grid>
    </Grid>
</Window>
