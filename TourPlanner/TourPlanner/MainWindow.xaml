<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourPlanner"
        mc:Ignorable="d"
        Title="TourPlanner - UI" Height="600" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="0"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="1"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Row="2"/>
        <Grid Grid.Row="0">
            <Label Margin="5" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center">Tour-Planner</Label>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">File</Button>
            <Button Grid.Column="1" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">Edit</Button>
            <Label Grid.Column="2" Margin="10"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">Place for other options!!!</Label>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="{Binding FilterInput, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <Button Grid.Column="1" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Command="{Binding ExecuteSearch}">Search!</Button>
            <Label Grid.Column="2" Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Content="{Binding FilterOutput}"></Label>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="0" />
            <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" />
            <Grid Grid.Column="0">

                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="13*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Label Grid.Column="0" Margin="5" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center">Tours</Label>
                </Grid>
                <Grid Grid.Row="1" HorizontalAlignment="Left" Width="158">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Margin="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">Start of Route:</Label>
                        <TextBox Grid.Row="1" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="{Binding StartInput, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                        <Label Grid.Row="2" Margin="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">End of Route:</Label>
                        <TextBox Grid.Row="3" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Text="{Binding EndInput, UpdateSourceTrigger=PropertyChanged}"></TextBox>
                    </Grid>
                    <Button Grid.Column="1" Margin="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Command="{Binding ExecuteAdd}">+</Button>
                </Grid>
                <Grid Grid.Row="2">
                    <Label>Tours will be shown here</Label>
                </Grid>
            </Grid>
            <Grid Grid.Column="1">
                <Label>Content will be here</Label>
            </Grid>
        </Grid>
    </Grid>
</Window>
